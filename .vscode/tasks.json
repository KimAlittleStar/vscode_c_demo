{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "mingw32-make.exe",
            "args": [
                "target=${workspaceRootFolderName}.exe"
            ],
            "type": "shell",
            "problemMatcher": []
        },
        {
            "label": "build-debug",
            "command": "mingw32-make.exe",
            "args": [
                "target=${workspaceRootFolderName}.exe",
                "DEBUG=-g",
                "PREDEF=Debug"
            ],
            "type": "shell"
        },
        {
            "label": "clean",
            "command": "mingw32-make.exe",
            "args": [
                "clean",
                "target=${workspaceRootFolderName}.exe"
            ],
            "type": "shell"
        },
        {
            "label": "runing",
            "command": "C:/Git/bin/bash.exe",
            "args": [
                "runExcute.sh",
                "${workspaceRootFolderName}.exe"
            ],
            "type": "shell"
        }
    ]
}